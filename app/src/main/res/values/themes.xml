<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DigitalHouseFoods" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/action_bar</item>
        <item name="colorPrimaryVariant">@color/action_bar_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">494dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:lineSpacingMultiplier">0.38</item>
        <item name="textAllCaps">true</item>
        <item name="android:radius">3dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>

    </style>


    <style name="textField">
        <item name="android:textSize">24sp</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:layout_margin">10dp</item>
        <item name="boxStrokeColor">@color/main_button</item>

    </style>

</resources>